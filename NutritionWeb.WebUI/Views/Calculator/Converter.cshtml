@{
    ViewBag.Title = "NB - Converter";
}
@Html.Partial("TrackingCode");
<link href="~/Content/converter.css" rel="stylesheet">

<div class="container">
    <div class="converter">
        <p>Tap the button to swap units.</p>
        <div class="weight">
            <input type="tel" class="weightIn" />
            <input class="btn btn-success converter-btn" id="weightButton"  type="button" value="Pounds > Kilograms" />
            <input type="tel" class="weightOut" disabled>
        </div>
        <br />
        <div class="height">
            <input type="tel" class="heightIn" />
            <input class="btn btn-success converter-btn" id="heightButton"  type="button" value="Inches > Centimeters" />
            <input type="tel" class="heightOut" disabled>
        </div>
        <br />
        <div class="volume">
            <input type="tel" class="volumeIn" />
            <input class="btn btn-success converter-btn" id="volumeButton" type="button" value="Ounces > Milliliters" />
            <input type="tel" class="volumeOut" disabled>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
<script src="~/Scripts/converter.js"></script>

